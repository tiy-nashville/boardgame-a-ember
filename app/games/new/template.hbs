<div class="game-name__container">
  <form {{action saveGames model on="submit"}} class="game-content">
    <div class="container">
      {{input class="input-item" value=model.title type=text placeholder="Add Name"}}
      {{input class="input-item" value=model.mechanics type=text placeholder="Add Type"}}
      {{input class="input-item" value=model.minPlayers type=text placeholder="Add Players Min"}}
      {{input class="input-item" value=model.maxPlayers type=text placeholder="Add Players Max"}}
      {{input class="input-item" value=model.description type=text placeholder="Add Description"}}
      {{input class="input-item" value=model.image type=text placeholder="Add Image"}}
      {{input class="input-item" value=model.playingTime type=text placeholder="Add Playing Time"}}
      {{input class="input-item" value=model.designers type=text placeholder="Add Designers"}}
      {{input class="input-item" value=model.publishers type=text placeholder="Add Publishers"}}
      {{input class="input-item" value=model.artists type=text placeholder="Add Artists"}}
      {{input class="input-item" value=model.yearPublished type=text placeholder="Add Year Published"}}
    </div>
    <div class="button">
      <button class="submit-button">Submit</button>
    </div>
  </form>
</div>


{{outlet}}
